<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VesuviusApp.View.OrderPage"
             xmlns:viewmodel="clr-namespace:VesuviusApp.ViewModel"
             x:DataType="viewmodel:OrderViewModel"
             Title="Order">
    <Grid RowDefinitions="100, Auto, *"
	      ColumnDefinitions=".75*, .25*">


        <CollectionView Grid.Row="2"
                        Grid.RowSpan="1"
						Grid.Column="0" 
                        Grid.ColumnSpan="3"
						ItemsSource="{Binding Orders}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <Grid Padding="0, 5">
                            <Frame>
                                <Label Text="{Binding .}"
								       FontSize="24" />
                            </Frame>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button
          Grid.Row="0"
            Grid.ColumnSpan="2"
            x:Name="Refresh"
            Text="Refresh"
            Command="{Binding }"
            
            
            ></Button>
    </Grid>
</ContentPage>