<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VesuviusApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VesuviusApp.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
	    </Tab>
        <Tab Title="Login">
            <ShellContent ContentTemplate="{DataTemplate local:Login}" Route="Login" />
	    </Tab>
        <Tab Title="Kitchen">
            <ShellContent ContentTemplate="{DataTemplate local:Kitchen}" Route="Kitchen" />
	    </Tab>
    </TabBar>

</Shell>

