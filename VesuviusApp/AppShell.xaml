<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VesuviusApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VesuviusApp.View"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Kitchen">
            <ShellContent ContentTemplate="{DataTemplate local:Kitchen}" Route="Kitchen" />
	    </Tab>
    </TabBar>

    <ShellContent
        Title="Kitchen"
        ContentTemplate="{DataTemplate local:Kitchen}"
        Route="Kitchen" />

</Shell>

